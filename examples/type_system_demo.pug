// Phase 2.1 Type System Demo
// このファイルは型システムの機能を実演します

// 基本型の定義と使用
let x = 42;        // int型
let y = 3.14;      // float型  
let name = "pug";  // string型
let flag = true;   // bool型

// 算術演算と型昇格
let sum = x + y;   // int + float = float

// 比較演算
let is_equal = (x == 42);
let is_greater = (sum > 10.0);

// 複雑な式
let result = (x + 10) * 2 - 5;

// 条件分岐
if (flag) {
    result + 100
} else {
    result - 100
}